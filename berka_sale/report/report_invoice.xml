<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="report_invoice_document_delivery_method" inherit_id="account.report_invoice_document">
        <xpath expr="//div[@id='informations']" position="inside">
            <div t-if="o.get_sale_id()" class="col-auto col-3 mw-100 mb-2">
                <strong>Delivery Method:</strong>
                <p class="m-0" t-field="o.get_sale_id().carrier_id"/>
            </div>
        </xpath>
    </template>
</odoo>